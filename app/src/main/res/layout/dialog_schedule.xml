<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Thêm sự kiện:"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/boder_edit_text"
        android:layout_marginBottom="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:inputType="text"
        android:maxLines="2"
        app:boxCornerRadiusTopEnd="10dp"
        android:hint="Hẹn gặp sinh viên trao đổi project 1"
        app:boxCornerRadiusTopStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"/>


    <EditText
        android:id="@+id/txtSv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nguyễn Văn A"
        android:background="@drawable/boder_edit_text"
        android:inputType="text"
        android:maxLines="2"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:nextFocusDown="@id/edtPassword"
        tools:ignore="SpeakableTextPresentCheck"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:hintEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/edtId"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="Thời gian trao đổi:"
        app:layout_constraintStart_toStartOf="@+id/txtSv"
        app:layout_constraintTop_toBottomOf="@id/txtSv" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ngày:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt"
        app:layout_constraintTop_toBottomOf="@id/txt" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtDate"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:background="@drawable/border_text"
        android:hint="dd/MM/YYYY"
        app:layout_constraintLeft_toRightOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/txt" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Giờ:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt"
        app:layout_constraintTop_toBottomOf="@id/date" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/timeFrom"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_text"
        android:hint="hh:mm"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/time"
        app:layout_constraintTop_toBottomOf="@id/date" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/timeTo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_text"
        android:hint="hh:mm"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/timeFrom"
        app:layout_constraintTop_toBottomOf="@id/date" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="Huỷ"

        app:layout_constraintRight_toLeftOf="@+id/btnSave"
        app:layout_constraintTop_toTopOf="@+id/btnSave" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:text="Lưu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeFrom" />

</androidx.constraintlayout.widget.ConstraintLayout>