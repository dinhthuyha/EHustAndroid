<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="userItem"
            type="com.prdcv.ehust.model.User" />

        <import type="com.prdcv.ehust.model.Role" />
    </data>

    <androidx.core.widget.NestedScrollView
        visible="@{userItem.roleId == Role.ROLE_TEACHER}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintVertical_bias="0.121">

        <com.loopeer.shadow.ShadowView
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/boder_edit_text"
            android:padding="20sp"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true"
            app:cornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:shadowColor="@color/text_color_shadow"
            app:shadowMargin="10dp"
            app:shadowRadius="14dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_information_user"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView5" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Mã cán bộ"
                    android:textColor="#47525E"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/contentId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{String.valueOf(userItem.id)}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/titleId"
                    app:layout_constraintTop_toBottomOf="@id/titleId"
                    tools:text="716323" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleCardStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Trạng thái cán bộ"
                    android:textColor="#47525E"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="@id/titleId"
                    app:layout_constraintTop_toBottomOf="@+id/contentId" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/contentCardStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{userItem.cadreStatus}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/titleId"
                    app:layout_constraintTop_toBottomOf="@+id/titleCardStatus"
                    tools:text="Công nghệ thông tin 11" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtTitleInstitute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Khoa/ viện"
                    android:textColor="#47525E"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@id/titleId"
                    app:layout_constraintTop_toBottomOf="@+id/contentCardStatus" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/contentInstitute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{String.valueOf(userItem.instituteOfManagement)}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/txtTitleInstitute"
                    app:layout_constraintStart_toStartOf="@id/titleId"
                    app:layout_constraintTop_toBottomOf="@id/txtTitleInstitute"
                    tools:text="K62" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn vị"
                    android:textColor="#47525E"
                    android:textSize="17sp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="@id/titleId"
                    app:layout_constraintTop_toBottomOf="@id/contentInstitute"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/contentUnit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{userItem.unit}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                   app:layout_constraintStart_toStartOf="@id/titleId"
                    app:layout_constraintTop_toBottomOf="@id/titleUnit"
                    tools:text="Khoa ky thuat may tinh" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_email"
                    android:textColor="#47525E"
                    android:layout_marginTop="15dp"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="@+id/titleUnit"
                    app:layout_constraintTop_toBottomOf="@id/contentUnit"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_content_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{userItem.email}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                   app:layout_constraintStart_toStartOf="@id/titleUnit"
                    app:layout_constraintTop_toBottomOf="@id/titleEmail"
                    tools:text="ha.dt173086@sis.hust .edu.vn" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.loopeer.shadow.ShadowView>
    </androidx.core.widget.NestedScrollView>
</layout>