<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.prdcv.ehust.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_homeAdminFragment"
            app:destination="@id/homeAdminFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.prdcv.ehust.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_projectGraduateFragment"
            app:destination="@id/projectGraduateFragment" />
        <action
            android:id="@+id/action_mainFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_studentsFragment"
            app:destination="@id/studentsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_mainFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
        <action
            android:id="@+id/action_mainFragment_to_detailTaskFragment"
            app:destination="@id/detailTaskFragment" />
        <action
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/newTaskFragment"
        android:name="com.prdcv.ehust.ui.task.NewTaskFragment"
        android:label="NewTaskFragment" >
        <action
            android:id="@+id/action_newTaskFragment_to_detailTaskFragment"
            app:destination="@id/detailTaskFragment" />
        <argument
            android:name="topic"
            app:argType="com.prdcv.ehust.data.model.Topic"
            app:nullable="true" />
        <action
            android:id="@+id/action_newTaskFragment_to_informationTopicFragment"
            app:destination="@id/informationTopicFragment" />
    </fragment>
    <fragment
        android:id="@+id/projectGraduateFragment"
        android:name="com.prdcv.ehust.ui.projects.ProjectsFragment"
        android:label="project_graduate_fragment"
        tools:layout="@layout/fragment_project_graduate" >
        <action
            android:id="@+id/action_projectGraduateFragment_to_topicsFragment"
            app:destination="@id/topicsFragment" />
        <action
            android:id="@+id/action_projectGraduateFragment_to_newTaskFragment"
            app:destination="@id/newTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.prdcv.ehust.ui.news.NewsFragment"
        android:label="NewsFragment" >
        <argument
            android:name="type"
            app:argType="com.hadt.ehust.model.TypeNotification" />
        <action
            android:id="@+id/action_newsFragment_to_detailTaskFragment"
            app:destination="@id/detailTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.prdcv.ehust.ui.profile.ProfileFragment"
        android:label="ProfileFragment" >
        <argument
            android:name="user"
            app:argType="com.prdcv.ehust.data.model.User"
            app:nullable="true" />
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <argument
            android:name="navigateFromAdmin"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/studentsFragment"
        android:name="com.prdcv.ehust.ui.students.StudentsFragment"
        android:label="StudentsFragment" >
        <action
            android:id="@+id/action_studentsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.prdcv.ehust.ui.schedule.ScheduleFragment"
        android:label="ScheduleFragment" />
    <fragment
        android:id="@+id/topicsFragment"
        android:name="com.prdcv.ehust.ui.projects.topic.TopicsFragment"
        android:label="TopicsFragment" >
        <action
            android:id="@+id/action_topicsFragment_to_newTaskFragment"
            app:destination="@id/newTaskFragment" />
        <argument
            android:name="project"
            app:argType="com.prdcv.ehust.ui.projects.ProjectArg" />
        <action
            android:id="@+id/action_topicsFragment_to_informationTopicFragment"
            app:destination="@id/informationTopicFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeAdminFragment"
        android:name="com.prdcv.ehust.ui.admin.HomeAdminFragment"
        android:label="HomeAdminFragment" >
        <action
            android:id="@+id/action_homeAdminFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailTaskFragment"
        android:name="com.prdcv.ehust.ui.task.detail.DetailTaskFragment"
        android:label="DetailTaskFragment" >
        <argument
            android:name="arg"
            app:argType="com.prdcv.ehust.ui.task.detail.TaskDetailArgs" />
        <action
            android:id="@+id/action_detailTaskFragment_to_attachmentViewerFragment"
            app:destination="@id/attachmentViewerFragment" />

    </fragment>

    <fragment
        android:id="@+id/attachmentViewerFragment"
        android:name="com.prdcv.ehust.ui.task.detail.AttachmentViewerFragment"
        android:label="AttachmentViewerFragment">

        <argument
            android:name="attachmentId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="fileName"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/informationTopicFragment"
        android:name="com.prdcv.ehust.ui.task.informationtopic.InformationTopicFragment"
        android:label="InformationTopicFragment" >
        <argument
            android:name="idTopic"
            app:argType="integer" />
    </fragment>
</navigation>